{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "crdInstall": {
      "type": "object",
      "properties": {
        "enable": {
          "type": "boolean"
        },
        "kubectl": {
          "type": "object",
          "properties": {
            "image": {
              "type": "string"
            },
            "registry": {
              "type": "string"
            },
            "tag": {
              "type": "string"
            }
          }
        }
      }
    },
    "project": {
      "type": "object",
      "properties": {
        "branch": {
          "type": "string"
        },
        "commit": {
          "type": "string"
        }
      }
    },
    "image": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "tag": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "tag"
      ]
    }
  },
  "required": [
    "project",
    "image"
  ]
}
